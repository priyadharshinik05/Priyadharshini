def chinese_zodiac(year):
    animals = ["Monkey", "Rooster", "Dog", "Pig", "Rat", "Ox", "Tiger", "Hare", "Dragon", "Snake", "Horse", "Sheep"]
    return animals[year % 12]

def main():
    while True:
        try:
            year = int(input())
            if year < 0:
                continue
            else:
                animal = chinese_zodiac(year)
                print(f"{year} is the year of the {animal}.")
                break
        except ValueError:
            print("Invalid input. Please enter a valid year (>= 0).")

if __name__ == "__main__":
    main()
